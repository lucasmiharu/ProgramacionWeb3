@model ProgramacionWeb3Tp.Models.Pedido
@using ProgramacionWeb3Tp.Models


@using (Html.BeginForm("elegir", "Pedidos", "Post"))
{
    @Html.AntiForgeryToken()
    <div class="container" align="center">
        <div id="login" align="center">
            <h3 class="text-center text-white pt-5">Completa la cantidad de gustos!</h3>
            <br />
            <div class="stepwizard">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                        <p>Datos</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                        <p>Gustos</p>
                    </div>
                   
                </div>
            </div>

            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-12">
                        <div id="login-box" class="col-md-12">
                            <div class="form" role="form">
                                <div class="row setup-content" id="step-1">
                                    <h3>Datos del pedido</h3>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NombreNegocio, htmlAttributes: new { @class = "text-info" })
                                        @Html.EditorFor(model => model.NombreNegocio, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre del negocio", autocomplete = "off", disabled = "disabled", @readonly = "readonly" }})
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "text-info" })
                                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", placeholder = "Descripcion del pedido", autocomplete = "off", disabled = "disabled", @readonly = "readonly" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PrecioUnidad, htmlAttributes: new { @class = "text-info" })
                                        @Html.EditorFor(model => model.PrecioUnidad, new { htmlAttributes = new { @class = "form-control", placeholder = "Precio unitario", autocomplete = "off", disabled = "disabled", @readonly = "readonly" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.PrecioDocena, htmlAttributes: new { @class = "text-info" })
                                        @Html.EditorFor(model => model.PrecioDocena, new { htmlAttributes = new { @class = "form-control", placeholder = "Precio unitario", autocomplete = "off", disabled = "disabled", @readonly = "readonly" } })
                                    </div>
                                    <button class="btn btn-success nextBtn btn-lg pull-center" type="button">Siguiente</button>                              
                                        
                                </div>
                                <div class="row setup-content" id="step-2">
                                    <h3>Seleccion de Gustos</h3> <BR>
                                    @foreach (GustoEmpanada item in Model.GustoEmpanada)
                                    {
                                        <div class="form-group">
                                            @Html.Label(item.Nombre, htmlAttributes: new { @class = "text-info col-md-3" })
                                            @Html.Editor("Cantidad", new { htmlAttributes = new { @class = "form-control col-md-3", placeholder = "Ingrese Cantidad", type="number", autocomplete = "off", id = item.IdGustoEmpanada } })
                                            <br />
                                        </div>
                                        

                                    }
                                    <br />
                                    <input type="submit" name="submit" class="btn btn-info" value="Guardar pedido" onClick="return true;" />


                                </div>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

