@{
    ViewBag.Title = "Pedido de Empanadas!";
}


<div class="container">
    <div class="page-header">
        <h1>Pedido de empanadas</h1>
    </div>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner carousel-images">
            <div class="item active">
                <h2 class="titulo-slider">Hace tu pedido muy facilmente en pocos pasos!</h2>
                @Html.ActionLink("Quiero registrarme!", "Registracion", "Home", new { area = "" }, new { @class = "btn btn-lg btn-success btn-slider" })
                <img src="content/img/slider1.jpg" alt="slider">
            </div>
            <div class="item">
                <h2 class="titulo-slider">Podes voler a usar pedidos anteriores!</h2>
                @Html.ActionLink("Iniciar sesión", "Login", "Home", new { area = "" }, new { @class = "btn btn-lg btn-success btn-slider" })
                <img src="content/img/slider2.jpg" alt="slider">
            </div>
            <div class="item">
                <h2 class="titulo-slider">Podes compartir tus pedidos a tus amigos!</h2>
                @Html.ActionLink("Mas información", "Login", "Home", new { area = "" }, new { @class = "btn btn-lg btn-success btn-slider" })
                <img src="content/img/slider3.jpg" alt="slider">
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
<br /><br />
<hr />
<br /><br />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="content/img/slider1.jpg" alt="Avatar" style="width:100%">
                <div class="container">
                    <h4><b>Variedad de gustos</b></h4>
                    <p>Agregamos nuevos gustos</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="content/img/slider2.jpg" alt="Avatar" style="width:100%">
                <div class="container">
                    <h4><b>Comparti tus pedidos</b></h4>
                    <p>Sumamos la posibilidad de compartir pedidos,<br /> para que tus amigos tambien los realicen </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="content/img/slider3.jpg" alt="Avatar" style="width:100%">
                <div class="container">
                    <h4><b>Rapido y confiable</b></h4>
                    <p>Realizas el pedido en pocos pasos</p>
                </div>
            </div>
        </div>
    </div>
</div>